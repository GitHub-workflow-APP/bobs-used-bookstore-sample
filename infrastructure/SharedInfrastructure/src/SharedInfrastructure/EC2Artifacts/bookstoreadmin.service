[Unit]
Description=Bobs Bookstore Admin App

[Service]
WorkingDirectory=/var/www/bookstoreadmin
ExecStart=/usr/bin/dotnet /var/www/bookstoreadmin/Bookstore.Admin.dll --AWS:Service "EC2"
Restart=always
# Restart service after 10 seconds if the dotnet service crashes:
RestartSec=10000
KillSignal=SIGINT
SyslogIdentifier=bookstoreadmin
User=ec2-user
Environment=ASPNETCORE_ENVIRONMENT=Production 

[Install]
WantedBy=multi-user.target
