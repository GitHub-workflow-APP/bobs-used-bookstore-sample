@model BOBS_Backend.ViewModel.ManageOrders.ManageOrderViewModel;

<head>
    <link rel="stylesheet" href="~/css/Orders/ManageOrders/Pagination.css"/>
</head>

    <ul class="list-group-horizontal list-group text-center">
        @if (Model.HasPreviousPages)
        {
            var prevPag = new Dictionary<string, string>
                {
                        {"filterValue",Model.FilterValue},
                        {"searchString",Model.SearchString},
                        {"pageNum",Model.CurrentPage-1+""}
                     };

            <a  class="page-num page-num-prev" asp-controller="Orders" asp-action="Index" asp-all-route-data="prevPag">
                Previous
            </a>
        }
        @foreach (var page in Model.Pages)
        {
            if (Model.CurrentPage == page)
            {
                <li class="list-group-item page-num"><span>@(page)</span></li>
            }
            else
            {
                var pag = new Dictionary<string, string>
                {
                        {"filterValue",Model.FilterValue},
                        {"searchString",Model.SearchString},
                        {"pageNum",page+""}
                     };
                <li class="list-group-item page-num"><a asp-controller="Orders" asp-action="Index" asp-all-route-data="pag">@(page)</a></li>
            }
        }
        @if (Model.HasNextPages)
        {
            var nextPag = new Dictionary<string, string>
                {
                        {"filterValue",Model.FilterValue},
                        {"searchString",Model.SearchString},
                        {"pageNum",Model.CurrentPage+1+""}
                     };

            <a class="page-num page-num-next" asp-controller="Orders" asp-action="Index" asp-all-route-data="nextPag" >
                Next
            </a>
        }
    </ul>
