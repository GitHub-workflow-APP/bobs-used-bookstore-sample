<script>
            function updateStatus()
            {
                var elem = document.getElementById("order-status-progress-bar");
                var text = document.getElementById("order-process-text");
                var percentOfProgress = Number(elem.style.width.replace(/[^\d\.\-]/g, ''));
                if (percentOfProgress >= 100) {
                    text.innerHTML = "Still Delivered";
                }
                else
                {
                    percentOfProgress += 25;
                    elem.style.width = percentOfProgress + "%";
                }
            }
</script>