@{
    ViewData["Title"] = "Home";
}
@*The view for when is the user is logged in*@
@if (User.Identity.IsAuthenticated)
{
    
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="first-slide" width="100%" height="400px" src="~/css/Images/bgBlack.jpg" alt="First slide">
                <div class="container">
                    <div class="carousel-caption text-center">
                        <h1>Manage all your books here</h1>
  
                        <p>
                            @Html.ActionLink("Manage", "WelcomePage", "Home", null, new { @class = "btn-group-sm btn btn-outline-light btn btn-primary" })
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@*the carousel for when the user is not authenticated*@
else
{
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="first-slide" width="100%" height="400px" src="~/css/Images/bgBlack.jpg" alt="First slide">
                <div class="container">
                    <div class="carousel-caption text-center">
                        <h1>Get the right Book for you</h1>
                        <p></p>
                        <p>
                            @Html.ActionLink("Register", "WelcomePage", "Home", null, new { @class = "btn-group-sm btn btn-outline-light btn btn-primary" })
                        </p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="second-slide" width="100%" height="400px" src="~/css/Images/book2.jpg" alt="Second slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>We have the best collection of Books.</h1>
                        <p>
                            @Html.ActionLink("Register", "WelcomePage", "Home", null, new { @class = "btn-group-sm btn btn-outline-light btn btn-primary" })
                        </p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="third-slide" width="100%" height="400px" src="~/css/Images/book1.jpg" alt="Third slide">
                <div class="container">
                    <div class="carousel-caption text-left">
                        <h1>Already a Member?</h1>

                        <p>
                            @Html.ActionLink("Login", "WelcomePage", "Home", null, new { @class = "btn-group-sm btn btn-outline-light btn btn-primary" })
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

}
