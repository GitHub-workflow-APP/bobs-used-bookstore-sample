@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Bob's Book Store</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <link href="https://fonts.googleapis.com/css?family=Montserrat:200,300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/styles.css">

</head>

<body>
    <section class="slider">
        <div class="container">
            <div id="owl-demo" class="owl-carousel owl-theme">

                <div class="item">
                    <div class="slide">
                        <img src="http://placehold.it/900x350" alt="slide1">
                        <div class="content">
                            <div class="title">
                                <h3>welcome to bookstore</h3>
                                <h5>Discover the best books online with us</h5>
                                <a href="#" class="btn">shop books</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <section class="about-sec">
        <div class="about-img">
            <figure style="background:url(./images/about-img.jpg)no-repeat;"></figure>
        </div>
        <div class="about-content">
            <h2>Who We Are</h2>
            <p>
                We're a group of Bob's who have had the passion of reading books growing up.
                Its time for us to share that passion with everyone, and offer books of all genres
                and categories for a cheap price. Welcome to Bob's Used Books. I hope you enjoy your stay
            </p>
            <div class="btn-sec">
                <a class="btn black" asp-area="" asp-controller="Search" asp-action="Index">Shop Books</a>
            </div>
        </div>
    </section>
    <section class="recomended-sec">
        <div class="container">
            <div class="title">
                <h2>Best Sellers</h2>
                <hr>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="item">
                        <img src="  https://dtdt6j0vhq1rq.cloudfront.net/harrypotter.jpeg" alt="img">
                        <h3>Harry Potter</h3>
                        <h6><span class="price">$49</span> / <a href="#">Buy Now</a></h6>
                        <div class="hover">
                            <a href="product-single.html">
                                <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
                            </a>
                        </div>
                    </div>
                </div>
          
            </div>
        </div>
    </section>
    <section class="features-sec">
        <div class="container">
            <ul>
                <li>
                    <span class="icon"><i class="fa fa-shopping-cart" aria-hidden="true"></i></span>
                    <h3>Newest Titles out there</h3>
                    <h5>We're stocked up</h5>
                    <h6>You can be sure that we have the latest books on shelf and are constantly adding new titles daily </h6>
                </li>
                <li>
                    <span class="icon return"><i class="fa fa-reply-all" aria-hidden="true"></i></span>
                    <h3>30 - DAY RETURN</h3>
                    <h5>Moneyback guaranteed</h5>
                    <h6>If you read the first few chapters and decided you didn't like it, we're willing to accept a return </h6>
                </li>
                <li>
                    <span class="icon chat"><i class="fa fa-comments" aria-hidden="true"></i></span>
                    <h3>Active Support</h3>
                    <h5>Our team is active</h5>
                    <h6>Need helping picking a book? confused on what genres are out there? we're available for all questions </h6>
                </li>
            </ul>
        </div>
    </section>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/custom.js"></script>

</body>

</html>