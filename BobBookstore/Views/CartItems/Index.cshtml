@model IEnumerable<BobBookstore.Models.ViewModels.CartViewModel>
@*@model Tuple<IEnumerable<BobBookstore.Models.Carts.CartItem>, BobBookstore.Models.Book.Book>*@

@{
    ViewData["Title"] = "Index";
}

<h1>Cart</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Cover
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Prices)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src="@Html.DisplayFor(modelitem => item.Url)" />
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Prices)
            </td>
            <td>

                <a asp-action="Delete" asp-route-id="@item.CartItem_Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
