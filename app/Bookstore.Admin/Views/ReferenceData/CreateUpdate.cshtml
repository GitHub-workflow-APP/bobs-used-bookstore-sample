@using Bookstore.Domain.ReferenceData

@model Bookstore.Admin.ViewModel.ReferenceData.ReferenceDataItemCreateUpdateViewModel

<div asp-validation-summary="All"></div>

<form class="row justify-content-center" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="col-4">
        <div class="mb-3">
            <label for="referenceDataTypeSelect" class="form-label">Reference data type</label>
            <select id="referenceDataTypeSelect" class="form-select" asp-for="SelectedReferenceDataType" asp-items="Html.GetEnumSelectList<ReferenceDataType>()"></select>
        </div>

        <div class="mb-3">
            <label for="referenceDataTextInput" class="form-label">Text</label>
            <input id="referenceDataTextInput" type="text" class="form-control" asp-for="Text" required />
        </div>

        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</form>