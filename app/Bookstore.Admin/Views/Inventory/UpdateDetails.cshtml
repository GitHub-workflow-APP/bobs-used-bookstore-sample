@model AdminSite.ViewModel.ManageInventory.BookDetailsViewModel

@{
    ViewData["Title"] = "Checkout";
    var errorstatus = (string)ViewData["ErrorStatus"];
    var error = (string)ViewData["Error"];
}

<head>
    <link rel="stylesheet" href="/css/Inventory/updatedetails.css"/>
</head>

<div style="margin-left : 20% ; margin-right : 20%">
    <div class="form-detail">
        <div>
            <h1 class=" text-center"style="margin-top:35px">
                <span class="title-1 text-center font-weight-light" style="margin-bottom: 45px;">UPDATE BOOK DETAILS</span>
            </h1>
            @if (errorstatus == "Yes")
            {
                <div>
                    <span class="main-text"> "Please re-upload the photos as they violate one or more of our content policies "</span>
                    <ol>
                        <li class="main-text">"Photo must be of type .jpg or .png or .gif"</li>
                        <li class="main-text">"Photo content must not contain profanity"</li>
                        <li class="main-text">"Photo must be that of a book"</li>
                    </ol>
                </div>
            }
        </div>
        <form enctype="multipart/form-data" asp-controller="Inventory" asp-action="SubmitChanges" method="post" style="padding-bottom: 0px;">
            <div asp-validation-summary="All"></div>
            <div class="panel-body">
                <div class="form-group">
                    <input class="main-text form-control bg-light text-dark" asp-for="BookId" hidden required placeholder="@Model.BookId" readonly/>
                </div>
                <div class="form-group">
                    <input class="main-text form-control bg-light text-dark" asp-for="BookCondition" hidden required placeholder="@Model.BookCondition" readonly/>
                </div>
                <div class="form-group">
                    <label class="main-text form-check-label text-secondary">Book Name</label>
                    <input class="main-text form-control bg-light text-dark" asp-for="BookName" required placeholder="@Model.Publisher.Name" readonly/>
                </div>
                <div class="form-group">
                    <label class="main-text form-check-label text-secondary">Publisher</label>
                    <input class="main-text form-control bg-light text-dark" asp-for="Publisher.Name" required placeholder="@Model.Publisher.Name" readonly/>
                </div>
                <div class="form-group">
                    <label class="main-text form-check-label text-secondary">Genre</label>
                    <input class="main-text form-control bg-light text-dark" asp-for="Genre.Name" required placeholder="@Model.Genre.Name" readonly/>
                </div>
                <div class="form-group">
                    <label class="main-text form-check-label text-secondary">Condition</label>
                    <input class="main-text form-control bg-light text-dark" asp-for="BookCondition.ConditionName" required placeholder="@Model.BookCondition.ConditionName" readonly/>
                </div>
                <div class="form-group">
                    <label class="main-text form-check-label text-secondary">Format</label>
                    <input class="main-text form-control bg-light text-dark" asp-for="BookType.TypeName" required placeholder="@Model.BookType.TypeName" readonly/>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="main-text form-check-label" asp-for="Price">Price</label>
                                <input class="main-text form-control bg-light text-dark" asp-for="Price" placeholder="@Model.Price" required/>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="main-text form-check-label" asp-for="Quantity">Quantity</label>
                                <input class="main-text form-control bg-light text-dark" asp-for="Quantity" placeholder="@Model.Quantity" required/>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <select style="margin-top:7%" class="main-text custom-select title-1 text-center font-weight-light " id="inputGroupSelect01" asp-for="Active">
                                    <option selected value="true">Active</option>
                                    <option value="false">Inactive</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Page Content -->
                <div class="container">
                    <div class="text-center">
                        <h3 class="main-text font-weight-light text-center text-lg-left mt-4 mb-0">Cover Pictures Gallery</h3>
                    </div>
                    <hr class="mt-2 mb-5">

                    <div class="row text-center text-lg-left">
                        @if (!string.IsNullOrEmpty(Model.FrontUrl))
                        {
                            <div class="col-lg-3 col-md-4 col-6">
                                <a href="#" class="d-block mb-4 h-100">
                                    <img class="img-fluid img-thumbnail" src="@Model.FrontUrl" alt="">
                                    <h4 class="main-text text-center font-weight-light">1</h4>
                                </a>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.BackUrl))
                        {
                            <div class="col-lg-3 col-md-4 col-6">
                                <a href="#" class="d-block mb-4 h-100">
                                    <img class="img-fluid img-thumbnail" src="@Model.BackUrl" alt="">
                                    <h4 class="main-text text-center font-weight-light">2</h4>
                                </a>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.LeftUrl))
                        {
                            <div class="col-lg-3 col-md-4 col-6">
                                <a href="#" class="d-block mb-4 h-100">
                                    <img class="img-fluid img-thumbnail" src="@Model.LeftUrl" alt="">
                                    <h4 class="main-text main-text text-center font-weight-light">2</h4>
                                </a>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.RightUrl))
                        {
                            <div class="col-lg-3 col-md-4 col-6">
                                <a href="#" class="d-block mb-4 h-100">
                                    <img class="img-fluid img-thumbnail" src="@Model.RightUrl" alt="">
                                    <h4 class="main-text text-center font-weight-light">2</h4>
                                </a>
                            </div>
                        }
                    </div>
                    <hr class="mt-2 mb-5">
                </div>

                <div class="container">
                    <input asp-for="@Model.FrontUrl" hidden class="main-text form-control custom-file-input">
                    <input asp-for="@Model.BackUrl" hidden class="main-text form-control custom-file-input">
                    <input asp-for="@Model.LeftUrl" hidden class="main-text form-control custom-file-input">
                    <input asp-for="@Model.RightUrl" hidden class="main-text form-control custom-file-input">

                    <div class="form-group row">
                        <label asp-for="FrontPhoto" class="main-text col-sm-2 col-form-label">Front Picture</label>
                        <div class="col-sm-10">
                            <div class="custom-file">
                                <input asp-for="FrontPhoto" class="main-text form-control custom-file-input">
                                <label class="main-text custom-file-label">Choose File</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="BackPhoto" class="main-text col-sm-2 col-form-label">Back Picture</label>
                        <div class="col-sm-10">
                            <div class="custom-file">
                                <input asp-for="BackPhoto" class="main-text form-control custom-file-input">
                                <label class="main-text custom-file-label">Choose File</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="LeftSidePhoto" class="main-text col-sm-2 col-form-label">Left Picture</label>
                        <div class="col-sm-10">
                            <div class="custom-file">
                                <input asp-for="LeftSidePhoto" class="main-text form-control custom-file-input">
                                <label class="main-text custom-file-label">Choose File</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="RightSidePhoto" class="main-text col-sm-2 col-form-label">Right Picture</label>
                        <div class="col-sm-10">
                            <div class="custom-file">
                                <input asp-for="RightSidePhoto" class="main-text form-control custom-file-input">
                                <label class="main-text custom-file-label">Choose File</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button class="main-text btn btn-outline-primary" type="submit">Submit</button>
                    </div>

                    @section Scripts {
                        <script src="~/js/Inventory/updatedetails.js"></script>
                    }

                </div>
            </div>
        </form>
    </div>
</div>