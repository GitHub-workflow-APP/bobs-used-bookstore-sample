@model AdminSite.ViewModel.UpdateBooks.LatestUpdates;

<div class="card m-3">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Book ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Author</th>
                    <th scope="col">Publisher</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Type</th>
                    <th scope="col">Condition</th>
                    <th scope="col">Price</th>
                    <th scope="col">Updated</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.UserBooks.Count == 0)
                {
                    <tr>
                        <td colspan="10" rowspan="4" style="text-align:center;">
                            <span>No Updates Currently</span>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var b in Model.UserBooks)
                    {
                        var param = new Dictionary<string, string>
                {
                { "BookId", $"{b.Book.Book_Id}" }
                };
                        <tr>
                            <td>@b.Book.Book_Id</td>
                            <td>@b.Book.Name</td>
                            <td>@b.Book.Author</td>
                            <td>@b.Book.Publisher.Name</td>
                            <td>@b.Book.Genre.Name</td>
                            <td>@b.Book.Type.TypeName</td>
                            <td>@b.Condition.ConditionName</td>
                            <td>@b.ItemPrice.ToString("C")</td>
                            <td>@b.UpdatedOn.ToShortDateString()</td>
                            <td>
                                <a class="card-link" asp-controller="Inventory" asp-action="BookDetails" asp-all-route-data="param">View</a> |
                                <a class="card-link" asp-controller="Inventory" asp-action="EditBookDetails" asp-route-bookId="@b.Book.Book_Id">Edit</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>