<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bob's Used Books</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="stylesheet" href="/css/googlefont.css">
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/custom-style.css">
</head>

<body>
    <partial name="_NavBarPartial" />

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="address">
                        <h4>Our Address</h4>
                        <!-- sample data! -->
                        <h6>
                            123 Any Street, Any Town, USA
                        </h6>
                        <h6>Call: 555-0100</h6>
                        <h6>Email: staff@BobsUsedBooks.com</h6>
                    </div>
                    <div class="timing">
                        <h4>Store Hours</h4>
                        <h6>Mon - Fri: 8am - 10pm</h6>
                        <h6>Saturday: 10am - 8pm</h6>
                        <h6>Sunday: 11am - 5pm</h6>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="navigation">
                        <h4>Navigation</h4>
                        <ul>
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="Index">View Orders</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Search" asp-action="Index">Search Books</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="ShoppingCart" asp-action="Index">Cart</a>
                            </li>
                        </ul>
                    </div>

                </div>
                <!-- while a real store would have a contact form, this sample does not
                <div class="col-md-5">
                    <div class="form">
                        <h3>Contact us</h3>
                        <h6>
                            Our team is ready to respond as soon as possibly during business hours
                        </h6>
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <input placeholder="Name" required>
                                </div>
                                <div class="col-md-6">
                                    <input type="email" placeholder="Email" required>
                                </div>
                                <div class="col-md-12">
                                    <textarea placeholder="Messege"></textarea>
                                </div>
                                <div class="col-md-12">
                                    <button class="btn black">Send</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                -->
            </div>
        </div>
        <div class="container">
            <br />
            &copy;
            <span id="year">
                <script src="/js/layout.js"></script>
            </span>
            - Bob's Used Books - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>

    </footer>

    <script src="/js/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script src="/js/site.js" asp-append-version="true"></script>
    <script src="/js/custom.js"></script>
    <script type="text/javascript" src="/js/dropdown.js" defer></script>

    @RenderSection("Scripts", false)
</body>
</html>
