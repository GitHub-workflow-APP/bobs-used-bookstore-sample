@if (User.Identity.IsAuthenticated)
{
    <div class="hstack gap-2">
        <a class="nav-link text-dark" asp-controller="Address" asp-action="Index">Hello @User.Identity.Name!</a>

        <div class="vr"></div>

        @if (User.IsInRole("Administrators"))
        {
            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Orders" asp-action="Index">Admin Portal</a>
            <div class="vr"></div>
        }
        <a class="nav-link text-dark" asp-controller="Authentication" asp-action="LogOut">Logout</a>
    </div>
}
else
{
    <a class="nav-link text-dark" asp-controller="Authentication" asp-action="Login">Log in</a>
}