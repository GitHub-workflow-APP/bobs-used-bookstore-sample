{
  "ConnectionStrings": {
    "BookstoreDatabaseConnection": "Data Source=bookstore.db"
  },
  "Logging": {
    "LogGroup": "BobsUsedBooks",
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Bookstore.Domain.Books": "Debug"
    }
  },
  "Services": {
    "Authentication": "local",
    "Database": "local",
    "FileService": "local",
    "ImageValidationService": "local",
    "LoggingService": "local",
    "MetricsService":  "local"
  },
  "Cognito": {
    "ClientIdSSMParameterName": "Cognito:LocalClientId",
    "LocalClientId": "LocalClientId",
    "AppRunnerClientId": "AppRunnerClientId",
    "IncludeErrorDetails": true,
    "MetadataAddress": "[Retrieved from AWS Systems Manager Parameter Store when Services:Authentication == 'aws']",
    "RequireHttpsMetadata": false,
    "SaveToken": true,
    "TokenValidationParameters": {
      "ValidateIssuer": true
    },
    "CognitoDomain": "[Retrieved from AWS Systems Manager Parameter Store when Services:Authentication == 'aws']"
  },
  "AllowedHosts": "*"
}
