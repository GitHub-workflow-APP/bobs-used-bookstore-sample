@model BookstoreBackend.ViewModel.ManageOrders.PartialOrderViewModel;


<style>
    .card-custom {
        border-radius: 3rem;
        border-color: black;
        background-color: white;
    }

    .card-custom-header {
        border-top-left-radius: 3rem;
        border-top-right-radius: 3rem;
        background-color: white;
        padding: .75rem 1.25rem;
        border-bottom: 1px solid rgba(0,0,0,.125);
    }

    .website-text {
        font-family: 'Arvo',serif
    }

    .card-custom-li-last-item {
        border-bottom-left-radius: 3rem;
        border-bottom-right-radius: 3rem;
        padding-bottom: 1rem;
    }

    .card-custom-li-item {
        display: block;
        background-color: #fff;
        border: 1px solid rgba(0,0,0,.125);
        display: block;
        padding: .75rem 1.25rem;
    }
</style>

<div class="card card-custom shadow">
    <div class="card-custom-header text-center website-text">
        Address Info
    </div>
    <ul class="list-group list-group-flush">
        <li class="card-custom-li-item  website-text">Address Line 1: @Model.Order.Address.AddressLine1</li>
        <li class="card-custom-li-item  website-text">City: @Model.Order.Address.City</li>
        <li class="card-custom-li-item  website-text">State: @Model.Order.Address.State</li>
        <li class="card-custom-li-item  website-text">Country: @Model.Order.Address.Country</li>
        <li class="card-custom-li-item card-custom-li-last-item website-text">Zip Code: @Model.Order.Address.ZipCode</li>
    </ul>
</div>