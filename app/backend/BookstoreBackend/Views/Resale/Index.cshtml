@model  IEnumerable<BobsBookstore.Models.Books.Resale> 
@using System
@{ ViewData["Title"] = "Index"; }

<head>
    <link rel="stylesheet" href="/css/Resale/index.css"/>
</head>

<div class="text-center">
    <h2 style="font-family: 'Arvo', serif; color: black;">@Resource.ManageResaleMessage</h2>
</div>
<div class="card shadow card-border border-dark mb-3" style="font-family: 'Arvo', sans-serif;">
    <div class="card-body">
        <div class="p-0 m-0">
            <table class="table_font  table  table-striped table-hover ">
                <thead>
                <tr>
                    <th scope="col">@Resource.BookNameLabel</th>
                    <th scope="col">@Resource.AuthorLabel</th>
                    <th scope="col">@Resource.GenreLabel</th>
                    <th scope="col">@Resource.StatusLabel</th>
                    <th scope="col">@Resource.ActionLabel</th>
                </tr>
                </thead>
                @foreach (var b in Model)
                {
                    var param = new Dictionary<string, string>
                    {
                        { "id", $"{b.Resale_Id}" }
                    };
                    <tr>
                        <td>@b.BookName</td>
                        <td>@b.Author</td>
                        <td>@b.GenreName</td>
                        <td>@b.ResaleStatus.Status</td>
                        <td>
                            <a class="card-link" asp-action="Details" asp-controller="Resale" asp-all-route-data="param">@Resource.DetailsButton</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
