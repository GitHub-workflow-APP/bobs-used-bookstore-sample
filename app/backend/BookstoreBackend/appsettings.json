{
  "ConnectionStrings": {
    "DefaultConnection": "Server={0},{1}; Initial Catalog=BobsUsedBookStore; Integrated Security= false",
    "FromEmailAddress": "noone@bobsbookstore.com",
    "ToEmailAddressDefault": "noone@bobsbookstore.com"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
