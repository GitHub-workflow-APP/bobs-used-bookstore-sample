@model AdminSite.ViewModel.UpdateBooks.LatestUpdates;
@{
    ViewData["Title"] = "Dashboard";
    var updates = Model;
}

<div class="row">
    <div class="col">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <button class="nav-link active" id="order-tab" data-bs-toggle="tab" data-bs-target="#order-tab-pane" role="tab" type="button" aria-controls="order" aria-selected="true">Orders</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="book-tab" data-bs-toggle="tab" data-bs-target="#book-tab-pane" role="tab" type="button" aria-controls="book" aria-selected="false">My Inventory Updates</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="global-tab" data-bs-toggle="tab" data-bs-target="#global-tab-pane" role="tab" type="button" aria-controls="global" aria-selected="false">Global Inventory Updates</button>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="AddPublishers" asp-controller="Inventory">Add Publisher</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="AddGenres" asp-controller="Inventory">Add Genre</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="AddBookTypes" asp-controller="Inventory">Add Type</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="AddBookConditions" asp-controller="Inventory">Add Condition</a>
            </li>
        </ul>

        <div class="tab-content" id="tabContent">
            <div class="tab-pane fade show active" id="order-tab-pane" role="tabpanel" aria-labelledby="order-tab">
                <partial name="~/Views/Home/Partials/ImportantOrders.cshtml" model="updates" />
            </div>
            <div class="tab-pane fade" id="book-tab-pane" role="tabpanel" aria-labelledby="book-tab">
                <partial name="~/Views/Home/Partials/LastUpdated.cshtml" model="updates" />
            </div>
            <div class="tab-pane fade" id="global-tab-pane" role="tabpanel" aria-labelledby="global-tab">
                <partial name="~/Views/Home/Partials/GlobalBookUpdates.cshtml" model="updates" />
            </div>
        </div>
    </div>
</div>