@{
    ViewData["Title"] = "Home Page";
}

<section class="about-sec">
    <div class="about-img">
        <figure style="background:url(/images/register.jpg)no-repeat;"></figure>
    </div>
    <div class="about-content">
        <h2>Who We Are</h2>
        <p>
            We're a group of readers who have had the passion of reading books growing up.
            Its time for us to share that passion with everyone, and offer pre-loved books of all genres
            and categories to others to enjoy. Welcome to our store for used books. We hope you enjoy your visit!
        </p>
        <div class="btn-sec">
            <a class="btn black" asp-area="" asp-controller="Search" asp-action="Index">Shop Books</a>
        </div>
    </div>
</section>
